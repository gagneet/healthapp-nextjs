# Docker Production Environment Configuration
COMPOSE_PROJECT_NAME=healthapp-prod

# Environment
NODE_ENV=production
VERSION=latest

# Database Configuration (USE SECURE VALUES IN PRODUCTION)
DB_NAME=healthapp_prod
DB_USER=healthapp_user
DB_PASSWORD=CHANGE_THIS_IN_PRODUCTION
DB_PORT=5432

# Redis Configuration
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_IN_PRODUCTION

# Application Configuration (USE SECURE VALUES IN PRODUCTION)
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_USE_STRONG_SECRET
FRONTEND_URL=https://your-healthapp-domain.com
LOG_LEVEL=info

# API URLs
NEXT_PUBLIC_API_URL=https://api.your-healthapp-domain.com/api
BACKEND_PORT=3001
FRONTEND_PORT=3000

# Docker Configuration
VOLUME_MODE=ro
FRONTEND_DOCKERFILE_SUFFIX=
BACKEND_COMMAND=node src/server.js

# Payment Processing (Required for production)
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# AWS Configuration (for file storage)
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-healthapp-bucket

# Monitoring (Optional)
GRAFANA_PASSWORD=CHANGE_THIS_IN_PRODUCTION