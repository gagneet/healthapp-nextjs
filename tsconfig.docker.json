{
  "extends": "./tsconfig.backend.json",
  "compilerOptions": {
    // Allow compilation despite errors for Docker build
    "noEmitOnError": false,
    
    // Enforce strict settings for Docker builds to match local development
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,

    // Keep important settings
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "app",
    "components", 
    "lib",
    "**/*.test.ts",
    "**/*.spec.ts",
    "next-env.d.ts",
    "postcss.config.ts",
    "tailwind.config.ts",
    "*.config.ts"
  ]
}