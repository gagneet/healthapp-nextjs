{
  "extends": "./tsconfig.backend.json",
  "compilerOptions": {
    // Allow compilation despite errors for Docker build
    "noEmitOnError": false,
    
    // Less strict settings for Docker build
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    
    // Keep important settings
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "app",
    "components", 
    "lib",
    "**/*.test.ts",
    "**/*.spec.ts",
    "next-env.d.ts",
    "postcss.config.ts",
    "tailwind.config.ts",
    "*.config.ts"
  ]
}