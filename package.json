{
  "name": "healthapp-template",
  "version": "4.0.0",
  "description": "HealthApp Healthcare Management Platform using NextJS, Node.js, Express, Sequelize, and PostgreSQL",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "backend:dev": "nodemon src/server.js",
    "backend:start": "node src/server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:undo": "npx sequelize-cli db:migrate:undo",
    "seed": "npx sequelize-cli db:seed:all",
    "seed:undo": "npx sequelize-cli db:seed:undo:all",
    "lint:backend": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "db:test": "node scripts/test-database-setup.js",
    "db:compare": "node scripts/compare-with-target-schema.js",
    "db:setup": "npm run migrate && npm run seed",
    "test:node": "node scripts/test-node-compatibility.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.525.0",
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.1.0",
    "@hookform/resolvers": "^3.3.0",
    "autoprefixer": "^10.4.0",
    "axios": "^1.7.0",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "framer-motion": "^11.2.0",
    "helmet": "^7.1.0",
    "joi": "^17.12.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.400.0",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "next": "^14.2.0",
    "next-auth": "^4.24.0",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "postcss": "^8.4.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-hook-form": "^7.51.0",
    "react-hot-toast": "^2.4.0",
    "recharts": "^2.12.0",
    "redis": "^4.6.13",
    "sequelize": "^6.37.1",
    "socket.io": "^4.7.5",
    "stripe": "^14.14.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^3.4.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.0",
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/node": "^20.12.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.4",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=22.18.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {}
  }
}
