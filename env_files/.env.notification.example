# Notification Service Configuration

# SMS Provider Configuration
SMS_PROVIDER=mock
# Options: mock, smsbazar

# SMS Bazar Configuration (India)
SMS_BAZAR_API_URL=http://api.smsbazar.in/sms/1/text/query
SMS_BAZAR_USERNAME=your_username
SMS_BAZAR_PASSWORD=your_password
SMS_BAZAR_FROM=HealthApp

# Email Provider Configuration
EMAIL_PROVIDER=mock
# Options: mock, nodemailer

# Email Configuration (for nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3
OTP_LENGTH=6

# Healthcare Message Configuration
HEALTHCARE_BRAND_NAME=HealthApp
HEALTHCARE_SUPPORT_EMAIL=support@healthapp.com
HEALTHCARE_PRIVACY_POLICY_URL=https://healthapp.com/privacy