# ============================================================================
# HEALTHCARE APPLICATION - LOCAL DEVELOPMENT CONFIGURATION
# ============================================================================
# Local development environment configuration for Docker Compose setup
# 
# PURPOSE: This file contains all environment variables needed for local
# development using Docker Compose. All values are safe for development.
# ============================================================================

# ============================================================================
# APPLICATION CORE SETTINGS
# ============================================================================
NODE_ENV=development
PORT=3002
FRONTEND_URL=http://localhost:3002

# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL with Prisma)
# ============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=healthapp_dev
POSTGRES_USER=healthapp_user
POSTGRES_PASSWORD=dev_password
DATABASE_URL="postgresql://healthapp_user:dev_password@postgres:5432/healthapp_dev?schema=public"

# ============================================================================
# REDIS CONFIGURATION (Session Storage & Caching)
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_password

# ============================================================================
# AUTH.JS v5 CONFIGURATION
# ============================================================================
NEXTAUTH_SECRET=local-dev-nextauth-secret-key
NEXTAUTH_URL=http://localhost:3002
AUTH_SECRET=local-dev-nextauth-secret-key

# ============================================================================
# API CONFIGURATION
# ============================================================================
NEXT_PUBLIC_API_URL=http://localhost:3002/api
BACKEND_URL=http://localhost:3002

# ============================================================================
# DOCKER DEPLOYMENT CONFIGURATION
# ============================================================================
DOMAIN=localhost
HOST_IP=localhost
STACK_NAME_PREFIX=healthapp

# Service Replica Configuration
REPLICAS=1

# Docker Admin Passwords
PGADMIN_PASSWORD=admin123

# ============================================================================
# JWT AUTHENTICATION (Legacy - keeping for compatibility)
# ============================================================================
JWT_SECRET=local-dev-jwt-secret-key-12345
JWT_REFRESH_SECRET=local-dev-refresh-jwt-secret-key-12345
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRE=7d

# ============================================================================
# SESSION MANAGEMENT
# ============================================================================
SESSION_SECRET=local-dev-session-secret-key-12345
SESSION_TIMEOUT=86400000

# ============================================================================
# DEVELOPMENT & DEBUGGING
# ============================================================================
DEBUG=healthapp:*
LOG_LEVEL=debug
NEXT_TELEMETRY_DISABLED=1

# ============================================================================
# FILE STORAGE (Development - Local File System)
# ============================================================================
AWS_ACCESS_KEY_ID=dev_access_key
AWS_SECRET_ACCESS_KEY=dev_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=healthapp-dev-uploads

# ============================================================================
# EMAIL CONFIGURATION (Development - Console Logging)
# ============================================================================
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USER=dev@healthapp.com
EMAIL_PASS=

# ============================================================================
# RATE LIMITING (Development - Relaxed)
# ============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# ============================================================================
# HEALTHCARE SPECIFIC SETTINGS (Development)
# ============================================================================
PHI_ENCRYPTION_KEY=dev_phi_key_32_chars_simulation
AUDIT_LOG_RETENTION_DAYS=30
ENABLE_HIPAA_AUDIT=false

# ============================================================================
# DEVELOPMENT TOOLS AND TESTING
# ============================================================================
ENABLE_API_DOCS=true
MOCK_EXTERNAL_SERVICES=true

# ============================================================================
# DOCKER COMPOSE SPECIFIC SETTINGS
# ============================================================================
COMPOSE_PROJECT_NAME=healthapp-local
DOCKER_BUILDKIT=1

# ============================================================================
# APPLICATION VERSION
# ============================================================================
VERSION=4.0.0-dev

# ============================================================================
# VIDEO CONSULTATION (Daily.co)
# ============================================================================
# IMPORTANT: Replace with your actual Daily.co API key
DAILY_API_KEY="YOUR_DAILY_API_KEY"
DAILY_API_URL="https://api.daily.co/v1"