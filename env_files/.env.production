# ============================================================================
# HEALTHCARE APPLICATION - PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
# Production environment configuration - SECURITY CRITICAL
# 
# SECURITY WARNINGS:
# 1. ALL secrets MUST be changed from defaults
# 2. NEVER use development passwords in production
# 3. Use HTTPS URLs in production
# ============================================================================

# ============================================================================
# APPLICATION CORE SETTINGS
# ============================================================================
NODE_ENV=production
PORT=3002
FRONTEND_URL=https://healthapp.gagneet.com

# ============================================================================
# API CONFIGURATION
# ============================================================================
BACKEND_URL=https://healthapp.gagneet.com
NEXT_PUBLIC_API_URL=https://healthapp.gagneet.com/api
VERSION=0.8.2

# ============================================================================
# DATABASE CONFIGURATION (PostgreSQL with Prisma)
# ============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=healthapp_prod
POSTGRES_USER=healthapp_user
POSTGRES_PASSWORD=secure_prod_password
DATABASE_URL="postgresql://healthapp_user:secure_prod_password@postgres:5432/healthapp_prod?schema=public"

# ============================================================================
# REDIS CONFIGURATION (Session Storage & Caching)
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=secure_redis_password

# ============================================================================
# AUTHENTICATION (Auth.js v5 & JWT)
# ============================================================================
NEXTAUTH_SECRET=healthcare-nextauth-secret-2025-secure
NEXTAUTH_URL=https://healthapp.gagneet.com
AUTH_SECRET=healthcare-nextauth-secret-2025-secure

# ============================================================================
# JWT AUTHENTICATION (Legacy - keeping for compatibility)
# ============================================================================
JWT_SECRET=secure-prod-jwt-secret-2025-change-this-in-production
JWT_REFRESH_SECRET=secure-prod-refresh-jwt-secret-2025-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRE=7d

# ============================================================================
# SESSION MANAGEMENT
# ============================================================================
SESSION_SECRET=secure-prod-session-secret-2025-change-this-in-production
SESSION_TIMEOUT=3600000

# ============================================================================
# GOOGLE AUTHENTICATION (Optional)
# ============================================================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ============================================================================
# DOCKER DEPLOYMENT CONFIGURATION
# ============================================================================
DOMAIN=healthapp.gagneet.com
HOST_IP=192.168.0.148
# Environment will be set by deployment script (dev/test/prod -> NODE_ENV mapping)
STACK_NAME_PREFIX=healthapp
# Docker Configuration
COMPOSE_PROJECT_NAME=healthapp-test
DOCKER_BUILDKIT=1

# Service Replica Configuration
REPLICAS=3

# Postgres Admin Passwords
PGADMIN_PASSWORD=secure_admin_password

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================
DEBUG=
LOG_LEVEL=error
NEXT_TELEMETRY_DISABLED=1
WDS_SOCKET_HOST=
WDS_SOCKET_PORT=
WATCHPACK_POLLING=
ALLOWED_DEV_ORIGINS=
NEXT_PUBLIC_DEBUG_LOGS=

# Performance Optimizations
NODE_OPTIONS="--max-old-space-size=4096"

# ============================================================================
# AWS S3 FILE STORAGE (Production)
# ============================================================================
# AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXXXXX
# AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=healthapp-prod-bucket

# ============================================================================
# EMAIL NOTIFICATIONS (Production)
# ============================================================================
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USER=apikey
# EMAIL_PASS=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================================================
# VIDEO CONSULTATION (Daily.co)
# ============================================================================
# IMPORTANT: Replace with your actual Daily.co API key
DAILY_API_KEY="YOUR_DAILY_API_KEY"
DAILY_API_URL="https://api.daily.co/v1"

# ============================================================================
# LAB INTEGRATIONS (Quest Diagnostics, LabCorp)
# ============================================================================
QUEST_API_KEY=your_quest_api_key
LABCORP_API_KEY=your_labcorp_api_key
LAB_WEBHOOK_API_KEY=your_lab_webhook_api_key
LAB_WEBHOOK_SECRET=your_lab_webhook_secret
LAB_API_URL=https://api.lab-partner.com/v1
LAB_API_KEY=your_lab_api_key

# ============================================================================
# PLUGIN SYSTEM
# ============================================================================
ENABLED_PLUGINS=fitbit,omron-bp,generic-bluetooth

# ============================================================================
# SEEDING
# ============================================================================
SEED_DEFAULT_PASSWORD=TempPassword123!

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=180000
RATE_LIMIT_MAX_REQUESTS=10000

# ============================================================================
# PAYMENT INTEGRATION & SUBSCRIPTION MANAGEMENT (PRODUCTION)
# ============================================================================

# Stripe Live Configuration - REPLACE WITH ACTUAL KEYS
STRIPE_PUBLISHABLE_KEY=pk_live_REPLACE_WITH_ACTUAL_STRIPE_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=sk_live_REPLACE_WITH_ACTUAL_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_REPLACE_WITH_ACTUAL_WEBHOOK_SECRET
STRIPE_API_VERSION=2023-10-16

# RazorPay Live Configuration - REPLACE WITH ACTUAL KEYS
RAZORPAY_KEY_ID=rzp_live_REPLACE_WITH_ACTUAL_KEY_ID
RAZORPAY_KEY_SECRET=REPLACE_WITH_ACTUAL_RAZORPAY_SECRET
RAZORPAY_WEBHOOK_SECRET=REPLACE_WITH_ACTUAL_WEBHOOK_SECRET

# Production Payment URLs
PAYMENT_SUCCESS_URL=https://healthapp.gagneet.com/dashboard/billing/success
PAYMENT_CANCEL_URL=https://healthapp.gagneet.com/dashboard/billing/cancel
PAYMENT_WEBHOOK_URL=https://healthapp.gagneet.com/api/webhooks/payments

# Production Billing Settings
DEFAULT_CURRENCY=USD
SUPPORTED_CURRENCIES=USD,INR
DEFAULT_TRIAL_DAYS=7
GRACE_PERIOD_DAYS=3
INVOICE_DUE_DAYS=7
ENABLE_PROMO_CODES=true
MAX_PROMO_USAGE=100

# ============================================================================
# IOT & MEDICAL DEVICE INTEGRATION (PRODUCTION)
# ============================================================================
IOT_DEVICE_API_KEY=REPLACE_WITH_ACTUAL_IOT_API_KEY
IOT_WEBHOOK_SECRET=REPLACE_WITH_ACTUAL_IOT_WEBHOOK_SECRET
IOT_DATA_ENCRYPTION_KEY=REPLACE_WITH_32_CHAR_ENCRYPTION_KEY
FHIR_SERVER_URL=https://your-fhir-server.com/fhir
FHIR_CLIENT_ID=REPLACE_WITH_ACTUAL_FHIR_CLIENT_ID
FHIR_CLIENT_SECRET=REPLACE_WITH_ACTUAL_FHIR_SECRET
ENABLE_DEVICE_VERIFICATION=true
DEVICE_CALIBRATION_INTERVAL=86400000
VITALS_ALERT_THRESHOLDS=true

# ============================================================================
# NOTIFICATION SERVICES (PRODUCTION)
# ============================================================================
TWILIO_ACCOUNT_SID=REPLACE_WITH_ACTUAL_TWILIO_SID
TWILIO_AUTH_TOKEN=REPLACE_WITH_ACTUAL_TWILIO_TOKEN
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX
FCM_SERVER_KEY=REPLACE_WITH_ACTUAL_FCM_SERVER_KEY
FCM_PROJECT_ID=healthapp-production-project
APPOINTMENT_REMINDERS_ENABLED=true
MEDICATION_REMINDERS_ENABLED=true
BILLING_NOTIFICATIONS_ENABLED=true
VITALS_ALERTS_ENABLED=true

# ============================================================================
# CLINICAL DECISION SUPPORT (PRODUCTION)
# ============================================================================
RXNORM_API_KEY=REPLACE_WITH_ACTUAL_RXNORM_KEY
FDA_API_KEY=REPLACE_WITH_ACTUAL_FDA_KEY
DRUG_INTERACTION_API_KEY=REPLACE_WITH_ACTUAL_INTERACTION_KEY
CLINICAL_DECISION_API_KEY=REPLACE_WITH_ACTUAL_CLINICAL_KEY
MEDICAL_KNOWLEDGE_BASE_URL=https://api.medicalkb.com
ENABLE_CLINICAL_ALERTS=true

# ============================================================================
# HEALTHCARE COMPLIANCE & SECURITY (PRODUCTION)
# ============================================================================
PHI_ENCRYPTION_KEY=REPLACE_WITH_32_CHAR_PHI_ENCRYPTION_KEY
AUDIT_LOG_RETENTION_DAYS=2555
ENABLE_HIPAA_AUDIT=true
ENCRYPTION_AT_REST=true
DATA_ANONYMIZATION=true

# ============================================================================
# PRODUCTION TOOLS AND MONITORING
# ============================================================================
ENABLE_API_DOCS=false
MOCK_EXTERNAL_SERVICES=false
MOCK_PAYMENT_PROVIDERS=false
MOCK_IOT_DEVICES=false
ENABLE_DEBUG_PAYMENTS=false
SKIP_EMAIL_VERIFICATION=false
