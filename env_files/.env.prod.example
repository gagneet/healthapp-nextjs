# Production Environment Variables (Docker Swarm)
# Copy this file to .env.prod and update with your production values

NODE_ENV=production
PORT=3005

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=healthapp_prod
POSTGRES_USER=healthapp_user
# POSTGRES_PASSWORD will be loaded from Docker secrets

# JWT Configuration  
# JWT_SECRET will be loaded from Docker secrets

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://api.your-domain.com
NEXT_PUBLIC_BACKEND_URL=https://api.your-domain.com

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD will be loaded from Docker secrets

# Multi-server deployment variables (set by script)
FRONTEND_IP=localhost
BACKEND_IP=localhost
POSTGRES_IP=localhost
REDIS_IP=localhost

# Container Registry
DOCKER_REGISTRY=your-registry.com

# SSL Configuration
SSL_ENABLED=true

# Monitoring
MONITORING_ENABLED=true